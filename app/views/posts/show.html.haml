#post_content
	%h1= @post.title
	%p= @post.content

	#comments
		%h2
			= @post.comments.count
			Комментарии
		= render @post.comments

		%h3 Ответить
		= render "comments/form"

	%br/
	%hr/
	%br/

	= link_to "Редактировать", edit_post_path(@post), class: "button"
	= link_to "Удалить", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this?" }, class: "button"
